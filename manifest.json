{
  "manifest_version": 2,
  "name": "yt-dl-ext",
  "version": "1.0",

  "description": "Allows to download videos with youtube-dl.",

  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "64": "icons/64.png",
    "128": "icons/128.png"
  },

  "permissions":["contextMenus", "tabs", "nativeMessaging", "notifications", "storage"],

  "background": {
    "scripts": ["background.js"]
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "yt-dl-ext@example.com"
    }
  },
  
  "options_ui": {
  "page": "options.html",
  "browser_style": true
  },

  "browser_action": {
    "default_icon": {
      "16": "icons/16.png",
      "32": "icons/32.png",
      "48": "icons/48.png",
      "64": "icons/64.png",
      "128": "icons/128.png"
    }
  }

}
